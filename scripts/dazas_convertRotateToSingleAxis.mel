dazas_orientAimMatch "-fromOriginObject FKShoulder_L \
                      -fromAimObject FKWrist_L \
                      -fromUpObject FKElbow_L \
                      -toOriginObject lShldrBend \
                      -toAimObject lHand \
                      -toUpObject lForearmBend";

}
